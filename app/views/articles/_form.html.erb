<div class="form-group">
  <%= form_for(@article) do |f| %>
    <%= f.label :title, class: "p-2 font-weight-bold" %>
    <br>
    <%= f.text_area :title, class: "p-2 mx-2 form-control-lg", style: "width: 800px" %>
    <br>
    <%= f.label :content, class: "p-2 font-weight-bold" %>
    <br>
    <%= f.text_area :content, class: "p-2 mx-2 form-control-lg", style: "width: 800px" %>
    <br>
    <%= f.submit class: "m-2 btn btn-secondary" %>
  <% end %>
</div>
