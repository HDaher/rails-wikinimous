<% @articles.each do |article| %>
  <div class="container p-3">
    <div class="mx-auto" style="width:700px">
      <tr>
        <h4 class="p-2"><%= link_to article.title, article, class: "text-decoration-none text-primary"%></h4>
        <p class="p-2"><%= article.content[0..100] %></p>
        <%= link_to edit_article_path(article), class: "text-decoration-none mx-2" do%>
          <i class="fas fa-pencil-alt"></i>
        <% end %> |
        <%= link_to article, method: :delete, class: "text-decoration-none mx-2" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </tr>
    </div>
  </div>
<% end %>

